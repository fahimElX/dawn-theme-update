<section class="section-wrapper-{{ section.id }}">

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text-block' %}
      <div class="blog-title-{{ block.id }}">{{ block.settings.text-content }}</div>
      {% when 'spacer-block' %}
      <div class="spacer-{{ block.id }}">

      </div>
    {% endcase %}

  {% endfor %}

</section>

<style>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text-block' %}
      .blog-title-{{ block.id }} {
        margin: 0 auto;
        max-width: 600px;
      }
      {% when 'spacer-block' %}
      .section-wrapper-{{ section.id }} .spacer-{{ block.id }} {
        height: {{ block.settings.spacer-height }}px;
      }
    {% endcase %}
  {% endfor %}
</style>

{% schema %}
  {
    "name": "blog post",
    "class": "section-blog-post",
    "blocks": [
      {
        "name": "text-block",
        "type": "text-block",
        "settings": [
          {
            "type": "richtext",
            "id": "text-content",
            "label": "Add Blog Title",
            "default": "<p>Journal Title, It's A Pretty Long One Too. </p>"
          }
        ]
      }, {
        "type": "spacer-block",
        "name": "Spacer",
        "settings": [
          {
            "type": "range",
            "id": "spacer-height",
            "label": "Spacer Height",
            "min": 0,
            "max": 200,
            "step": 5,
            "unit": "px",
            "default": 30
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "content",
        "name": "blog post"
      }
    ]
  }
{% endschema %}